extends default

block script 
  script(defer='' src='scripts/newAccount-Client.js')

block content
  #rollingMessageContainer
    #rollingMessage Baby Boom
  h1.myHeader New Account- Client
  form.form-NewAccount(action='')
    // action starts a function in JS
    .msg
    .form-group
      label(for='email')  Email:
      input#email(type='email' name='email' placeholder='Enter your email')
    .form-group
      label(for='full_name') Full Name:
      input#full_name(type='text' name='full_name' placeholder='Enter your full name')
    .form-group
      label(for='date_of_birth')  Date of birth:
      input#date_of_birth(type='date' name='Date Of Birth' placeholder='Enter your birth date')
    .form-group
      label(for='phone_number')  phone number:
      input#phone_number(type='number' name='phone Number' placeholder='Enter your phone number')
    .form-group
      label(for='password')  Password:
      input#password(type='password' name='password' placeholder='Enter your password')
    .button-Container
      input#submit(type='submit' value='submit' name='submit')
  // buttons
  div
    ul.buttons_logout_home
      li
        a.log_out(href='homePage') cancel

